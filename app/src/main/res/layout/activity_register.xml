<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="@font/font"/>

    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="20dp"
        android:text="회원 가입"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rd_et_background_line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_new_id"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint="id"
                android:paddingLeft="10dp"
                android:background="@drawable/rd_et_background_line"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btn_new_check"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rd_bt_background_line"
                android:text="중복"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:hint="password"
            android:paddingLeft="10dp"
            android:background="@drawable/rd_et_background_line"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:hint="name"
            android:paddingLeft="10dp"
            android:background="@drawable/rd_et_background_line"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:hint="phone"
            android:paddingLeft="10dp"
            android:background="@drawable/rd_et_background_line"
            />

        <Spinner
            android:id="@+id/spinner_tell"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"

            android:entries="@array/tell_List"
            android:background="@drawable/rd_et_background_line">
        </Spinner>

        <EditText
            android:id="@+id/et_company"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:enabled="false"
            android:hint="company"
            android:background="@drawable/rd_et_background_line"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_new_register"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="85dp"
        android:background="@drawable/rd_bt_background_line"
        android:text="회원가입"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>